<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_banner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="首页"
            android:textColor="#FEFEFE"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="17dp"
            android:drawableTop="@drawable/home_icon_safe"
            android:gravity="center"
            android:text="保险"
            android:textColor="#747474"
            android:textSize="13dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="17dp"
            android:drawableTop="@drawable/home_icon_cost"
            android:gravity="center"
            android:text="缴费"
            android:textColor="#747474"
            android:textSize="13dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="17dp"
            android:drawableTop="@drawable/home_icon_money"
            android:gravity="center"
            android:text="理财投资"
            android:textColor="#747474"
            android:textSize="13dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="17dp"
            android:drawableTop="@drawable/home_icon_more"
            android:gravity="center"
            android:text="更多"
            android:textColor="#747474"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="28dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_icon_notice" />

        <View
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_marginLeft="4dp"
            android:background="#C6C6C6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="欢迎来到本平台，平台V1.0正式上线，欢迎使用..."
            android:textColor="#898989"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>